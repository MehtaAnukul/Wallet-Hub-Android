<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/colorlight">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/label_customLayout_labelNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label"
        android:textColor="@color/colorWhite"
        android:padding="20dp"/>
    <ImageView
        android:id="@+id/label_customLayout_optionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_navigation_menu"
        android:layout_alignParentEnd="true"/>

    <CheckBox
        android:id="@+id/activity_main_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
    </android.support.v7.widget.CardView>